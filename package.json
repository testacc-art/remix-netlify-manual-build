{
  "scripts": {
    "dev": "remix dev",
    "tsc": "tsc",
    "tsc:dev": "tsc --noEmit -w",
    "tailwind": "tailwindcss -o ./app/index.css",
    "tailwind:dev": "tailwindcss -o ./app/index.css --watch",
    "build": "bash scripts/build.sh",
    "deploy": "netlify deploy --prod",
    "prettier": "prettier -w .",
    "prettier:check": "prettier -c .",
    "isort": "tslint -p . --fix",
    "isort:check": "tslint -p .",
    "lint": "pnpm run prettier && pnpm run isort",
    "lint:check": "pnpm run prettier:check && pnpm run isort:check",
    "db:reset": "docker-compose exec -T mysql mysql -uroot -ppassword -e 'DROP DATABASE IF EXISTS remix_development; CREATE DATABASE remix_development;'",
    "db:reset:test": "docker-compose exec -T mysql mysql -uroot -ppassword -e 'DROP DATABASE IF EXISTS remix_test; CREATE DATABASE remix_test;'",
    "db:migrate": "knex migrate:latest",
    "db:migrate:test": "DATABASE_ENV=test knex migrate:latest",
    "db:setup": "pnpm run db:reset && pnpm run db:migrate",
    "db:setup:test": "pnpm run db:reset:test && pnpm run db:migrate:test",
    "services:up": "docker-compose up -d mysql",
    "services:down": "docker-compose down",
    "services:clear": "docker-compose down -v --remove-orphans && docker-compose rm -f -s -v",
    "services:wait": "docker-compose run --rm dockerize -wait tcp://mysql:3306",
    "test": "APP_MYSQL_DATABASE=remix_test jest",
    "test:playwright": "APP_MYSQL_DATABASE=remix_test playwright test",
    "test:playwright:debug": "APP_MYSQL_DATABASE=remix_test PWDEBUG=1 playwright test"
  },
  "dependencies": {
    "@netlify/functions": "^0.10.0",
    "@remix-run/netlify": "^1.2.2",
    "@remix-run/react": "^1.2.2",
    "@remix-run/server-runtime": "^1.2.2",
    "@sinclair/typebox": "^0.23.4",
    "ajv": "^8.10.0",
    "ajv-formats": "^2.1.1",
    "bcryptjs": "^2.4.3",
    "knex": "^1.0.3",
    "lodash": "^4.17.21",
    "mysql2": "^2.3.3",
    "qs": "^6.10.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "superjson": "^1.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@jest/globals": "^27.5.1",
    "@playwright/test": "^1.19.2",
    "@remix-run/dev": "^1.2.2",
    "@remix-run/node": "^1.2.3",
    "@remix-run/serve": "^1.2.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/lodash": "^4.14.179",
    "@types/node": "^17.0.21",
    "@types/qs": "^6.9.7",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.2",
    "babel-jest": "^27.5.1",
    "daisyui": "^2.2.2",
    "esbuild": "^0.14.23",
    "jest": "^27.5.1",
    "kysely": "^0.17.1",
    "postcss": "^8.4.7",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.23",
    "ts-node": "^10.5.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5"
  },
  "volta": {
    "node": "16.14.0"
  }
}
